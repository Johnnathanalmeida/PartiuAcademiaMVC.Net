@using System.Web.UI.WebControls
@using PartiuAcademia.Web.InfraStructure.Helpers.Enum
@model PartiuAcademia.Core.Entities.User
@{
    ViewBag.Title = "Register";
}


<div class="row">
    <div class="col-md-12 align-center">
        <h1>Crie sua conta</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6 hidden-sm hidden-xs align-center">
        <h2>Você só precisa de uma conta</h2>
        <p>Um único nome de usuário e senha dá acesso a tudo o que a i3J oferece.</p>
        <p>- One Fitness</p>
        <p>- One Control</p>
        <br />
        <h2>Leve tudo com você</h2>
        <p>Troque de dispositivo e continue de onde parou.</p>
    </div>
    <div class="col-md-6">
@using (Ajax.BeginForm("Register", "Account", new AjaxOptions()
{
    HttpMethod = "Post",
    LoadingElementId = "divLoading",
    InsertionMode = InsertionMode.Replace,
    OnSuccess = "onSucessoEmpresa"
}))
{
    @Html.AntiForgeryToken()
        
        <div class="row">
            <fieldset>
                <div class="col-md-5">
                    <label class="block clearfix">
                        <span class="block input-group">
                            @Html.Academia().TextBox("Name", "Nome", TextBoxType.Texto)
                        </span>
                    </label>
                </div>
                <div class="col-md-5 align-left">
                    <label class="block clearfix">
                        <span class="block input-group">
                            @Html.Academia().TextBox("LastName", "Sobrenome", TextBoxType.Texto)
                        </span>
                    </label>
                </div>
            </fieldset>
            @Html.ValidationMessageFor(e => e.Name, String.Empty, new { @class = "text-danger", @style = "padding-left: 12px;" })
            @Html.ValidationMessageFor(e => e.LastName, String.Empty, new { @class = "text-danger", @style = "padding-left: 12px;" })
        </div>

        <div class="row">
            <div class="col-md-10 align-left">
                <div class="form-group">
                    <label class="block clearfix">
                        <span class="block input-group">
                            @Html.Academia().TextBox("Email", "E-mail", TextBoxType.Texto)
                        </span>
                    </label>
                    @Html.ValidationMessageFor(e => e.Name, String.Empty, new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-10">
                <div class="form-group">
                    <label class="block clearfix">
                        <span class="block input-group">
                            @Html.Academia().TextBox("Password", "Senha", TextBoxType.Senha)
                        </span>
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <div class="form-group">
                    <label class="block clearfix">
                        <span class="block input-group">
                            @Html.Academia().TextBox("ConfirmPassword", "Repita a Senha", TextBoxType.Senha)
                        </span>
                    </label>
                </div>
            </div>
        </div>
    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                <label>Data de Nascimento</label><br />
                <input type="text" class="align-center" style="width: 60px;" placeholder="Dia" value="" />
                <select class="align-center" style="width: 140px; padding: 3px;">
                    <option>Mês</option>
                </select>
                <input type="text" class="align-center" style="width: 80px;" placeholder="Ano" value="" />
            </div>
        </div>
    </div>
        <div class="row">
            <div class="col-md-10">
                <div class="form-group">
                    <label class="block">
                        <input type="checkbox" class="ace" />
                        <span class="lbl">Eu aceito os <a href="#">Termos de Uso</a></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-2 col-md-10">
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Registrar" />
                </div>
            </div>
        </div>

}
    </div>
</div>



